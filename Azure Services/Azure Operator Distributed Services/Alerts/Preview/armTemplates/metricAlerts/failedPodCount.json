{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Failed Pod Counts"
    },
    "alertDescription": {
      "value": "pods in failed state."
    },
    "alertSeverity": {
      "value": 3
    },
    "metricNamespace": {
      "value": "Insights.Container/pods"
    },
    "metricName": {
      "value": "podCount"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": "0"
    },
    "timeAggregation": {
      "value": "Maximum"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT1M"
    },
    "dimensions": {
      "value": [
        {
          "name": "phase",
          "operator": "Include",
          "values": ["Failed"]
        }
      ]
    }
  }
}
