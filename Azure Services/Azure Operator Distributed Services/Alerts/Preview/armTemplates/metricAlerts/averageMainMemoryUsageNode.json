{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Average main memory Used - Node"
    },
    "alertDescription": {
      "value": "average % main memory usage for server/node"
    },
    "alertSeverity": {
      "value": 3
    },
    "metricNamespace": {
      "value": "Insights.Container/nodes"
    },
    "metricName": {
      "value": "memoryRssPercentage"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": "85"
    },
    "timeAggregation": {
      "value": "Average"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT1M"
    },
    "dimensions": {
      "value": [
        {
          "name": "host",
          "operator": "Include",
          "values": ["*"]
        }
      ]
    }
  }
}
