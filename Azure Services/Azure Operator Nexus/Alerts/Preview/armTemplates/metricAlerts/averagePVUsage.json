{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Average Persistent Volume Usage"
    },
    "alertDescription": {
      "value": "average PV usage % per pod."
    },
    "alertSeverity": {
      "value": 3
    },
    "metricNamespace": {
      "value": "Insights.Container/persistentvolumes"
    },
    "metricName": {
      "value": "pvUsageExceededPercentage"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": "80"
    },
    "timeAggregation": {
      "value": "Average"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT1M"
    },
    "dimensions": {
      "value": [
        {
          "name": "PODNAME",
          "operator": "Include",
          "values": ["*"]
        }
      ]
    }
  }
}
