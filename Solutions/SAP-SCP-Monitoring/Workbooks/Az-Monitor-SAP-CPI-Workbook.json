      {
        "type": 3,
        "content": {
          "version": "KqlItem/1.0",
          "query": "CPIFailure_CL \r\n| summarize Failure=countif(severity_s ==Â \"ERROR\"),All=count(severity_s ==Â \"ERROR\" or severity_s ==Â \"INFO\")\r\n",
          "size": 3,
          "title": "# of overall Errors",
          "timeContext": {
            "durationMs": 0
          },
          "timeContextFromParameter": "TimeRange",
          "queryType": 0,
          "resourceType": "microsoft.operationalinsights/workspaces",
          "crossComponentResources": [
            "{SCP_CPI_Workspace}"
          ],
          "visualization": "tiles",
          "tileSettings": {
            "titleContent": {},
